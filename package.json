{
  "name": "resonance",
  "version": "1.0.1",
  "description": "Resonance - A clean and minimal API client with excellent user experience",
  "license": "MIT",
  "author": "Dennis Bl√ºmer",
  "type": "module",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo \"Add linting tool like eslint if needed\"",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "dist:dir": "electron-builder --dir"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@jest/globals": "^30.0.4",
    "babel-jest": "^30.0.4",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4"
  },
  "dependencies": {
    "assert-plus": "^1.0.0",
    "axios": "^1.10.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.1.0",
    "electron-window-state": "^5.0.3",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "io.github.db_mobile.resonance",
    "productName": "Resonance",
    "asar": true,
    "files": [
      "**/*",
      "!flatpak-node{,/**}",
      "!forge.config.js"
    ],
    "asarUnpack": [],
    "directories": {
      "output": "out/make"
    },
    "linux": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Development",
      "icon": "./assets/icons/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "./assets/icons/icon.icns"
    }
  }
}
